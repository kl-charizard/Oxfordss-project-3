.history { padding: 16rpx; }
.header { display:flex; justify-content: space-between; align-items:center; margin-bottom: 12rpx; }
.title { font-size: 34rpx; font-weight: 700; }
.row { display:flex; justify-content: space-between; padding: 16rpx 0; border-bottom:1rpx solid #eee; }
.left { max-width: 80%; }
.word { display:block; font-weight: 700; font-size: 32rpx; color:#111827; }
.meta { display:block; color:#6b7280; margin-top: 4rpx; }
.hint { display:block; color:#374151; margin-top: 6rpx; }
.time { color:#9ca3af; }
.empty { padding: 40rpx 0; color:#6b7280; text-align:center; } 