.page { display: flex; flex-direction: column; height: 100%; }
.brand { padding: 16rpx; text-align: center; background: #222; color: #fff; font-weight: 600; display: flex; justify-content: space-between; align-items: center; }
.brand .session { font-size: 22rpx; opacity: 0.9; }
.header { display: flex; padding: 16rpx; background: #ffffff; border-bottom: 1rpx solid #eee; align-items: center; }
.header .picker + .picker { margin-left: 16rpx; }
.picker { padding: 12rpx 16rpx; background: #f5f5f5; border-radius: 8rpx; }
.actions { margin-left: auto; display: flex; }
.actions .btn { margin-left: 12rpx; }
.actions .ghost { background: #fff; border: 1rpx solid #ddd; }
.quick { padding: 12rpx 16rpx; background: #fafafa; border-bottom: 1rpx solid #f0f0f0; }
.quick-title { color: #666; margin-right: 12rpx; }
.chips { display: flex; flex-wrap: wrap; margin-top: 8rpx; }
.chip { background: #f0f7ff; color: #1e64ff; padding: 10rpx 16rpx; border-radius: 999rpx; margin: 6rpx 10rpx 0 0; }
.chat { flex: 1; padding: 16rpx; background: #f7f8fa; }
.message { display: flex; margin-bottom: 16rpx; }
.message .bubble { max-width: 70%; padding: 16rpx; border-radius: 12rpx; line-height: 1.6; word-break: break-word; }
.message.user { justify-content: flex-end; }
.message.user .bubble { background: #4b9cff; color: #ffffff; border-top-right-radius: 4rpx; }
.message.bot .bubble { background: #ffffff; color: #333333; border-top-left-radius: 4rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); }
.composer { display: flex; padding: 12rpx; background: #ffffff; border-top: 1rpx solid #eee; }
.input { flex: 1; padding: 16rpx; border: 1rpx solid #ddd; border-radius: 10rpx; background: #fff; margin-right: 12rpx; }
.send { min-width: 140rpx; } 